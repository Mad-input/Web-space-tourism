---
interface Props {
  page: number;
}

const { page } = Astro.props;
---

<header>
  <div class="logo">
    <img src="/assets/shared/logo.svg" alt="logo" />
  </div>
  <span class="rectangle"></span>
  <nav class="nav">
    <ul class="nav-list">
      <li class=`list-item-home ${page == 1 ? 'active': ''}` data-dataPage="1">
        <a href="/"><span class="span-list-item">00</span> Home</a>
      </li>
      <li class=`list-item-home ${page == 2 ? 'active': ''}` data-dataPage="2">
        <a href="/Destination"
          ><span class="span-list-item">01</span> Destination</a
        >
      </li>
      <li class=`list-item-home ${page == 3 ? 'active': ''}` data-dataPage="3">
        <a href="/Crew"><span class="span-list-item">02</span> Crew</a>
      </li>
      <li class=`list-item-home ${page == 4 ? 'active': ''}` data-dataPage="4">
        <a href="/Technology"
          ><span class="span-list-item">03</span> Technology</a
        >
      </li>
    </ul>
    <span class="indicator" id="Indicator"></span>
  </nav>
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 2.5rem 0 0 3.4375rem;

    .nav {
      width: 68.75rem;
      height: 6rem;
      background: rgba(255, 255, 255, 0.03);
      backdrop-filter: blur(0.625rem);
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;

      .nav-list {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 3.125rem;

        .list-item-home {
          list-style: none;
          position: relative;

          &::before {
            content: "";
            display: none;
            position: absolute;
            bottom: -2.1875rem;
            width: 100%;
            height: 0.1875rem;
            background: rgb(255, 255, 255);
          }
          &.active::before {
            display: inline-block;
          }

          &:hover::before {
            display: none;
          }

          a {
            font-family: "Barlow Condensed", sans-serif;
            font-size: 1.125rem;
            font-weight: 400;
            color: #fff;
            text-decoration: none;
            text-transform: uppercase;
            letter-spacing: 0.1688rem;

            span {
              font-family: "Barlow Condensed", sans-serif;
              font-weight: 700;
            }
          }
        }
      }

      .indicator {
        height: 0.1875rem;
        background: rgba(255, 255, 255, 0.3);
        position: absolute;
        bottom: 0;
        left: 0;

        transition: 0.3s ease-in-out all;
      }
    }

    .rectangle {
      width: 37.5rem;
      height: 0.0625rem;
      margin-right: -12.5rem;
      z-index: 2000;
      background: rgba(255, 255, 255, 0.2);
    }
  }
</style>

<script>
  const indicator = document.getElementById("Indicator");
  const listItems = document.querySelectorAll(".list-item-home");

  listItems.forEach((item) => {
    item.addEventListener("mouseenter", () => {
      indicator.style.left = `${item.offsetLeft}px`;
      indicator.style.width = `${item.clientWidth}px`;
    });

    item.addEventListener("mouseleave", () => {
      indicator.style.left = `0px`;
      indicator.style.width = `0px`;
    });
  });
</script>
